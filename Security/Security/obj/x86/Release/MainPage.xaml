<Page 
    x:Class="Security.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Security"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>

        <Rectangle Height="115" Margin="0,0,0,0" VerticalAlignment="Top" Fill="WhiteSmoke"/>
        <TextBlock x:ConnectionId='2' x:Name="txtBlock" HorizontalAlignment="Left" Margin="25,29,0,0" Text="Refresh to get info" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="30"/>
        <ProgressBar x:ConnectionId='3' x:Name="pb" HorizontalAlignment="Left" Height="8" Margin="25,80,0,0" VerticalAlignment="Top" Width="400"/>
        <GridView HorizontalAlignment="Stretch" Margin="25,145,0,0" VerticalAlignment="Stretch">
            <ItemsControl x:ConnectionId='7' HorizontalAlignment="Center" Height="125" VerticalAlignment="Top" Width="125"                             Margin="0,0,0,0">
                <FontIcon Glyph="&#xF552;" Height="80" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="125" FontSize="25"/>
                <GridViewItem x:ConnectionId='12' HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"                             Height="20">Defender</GridViewItem>
            </ItemsControl>
            <ItemsControl x:ConnectionId='8' HorizontalAlignment="Stretch" Height="125" VerticalAlignment="Stretch" Width="125"                            >
                <FontIcon Glyph="&#xE95E;" Height="80" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="125" FontSize="25"/>
                <GridViewItem x:ConnectionId='11' HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"                             Height="20">Health</GridViewItem>
            </ItemsControl>
            <ItemsControl x:ConnectionId='9' HorizontalAlignment="Stretch" Height="125" VerticalAlignment="Stretch" Width="125"                            >
                <FontIcon Glyph="&#xE772;" Height="80" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top" Width="125" FontSize="25"/>
                <GridViewItem x:ConnectionId='10' HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch"                             Height="20">Devices</GridViewItem>
            </ItemsControl>
        </GridView>
        <CommandBar Margin="0,0,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" Background="WhiteSmoke" Height="50" Width="50">
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:ConnectionId='4' Icon="Refresh" Label="Settings"                           />
            <AppBarButton x:ConnectionId='5' Icon="Setting" Label="Settings"                             />
            <AppBarButton x:ConnectionId='6' Icon="Sync" Label="Update"                             />
        </CommandBar>



    </Grid>

</Page>

